<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C6EFC8"
    android:padding="10dp">

    <TextView
        android:id="@+id/itemTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="plant name"
        android:textColor="#000" />

    <TextView
        android:id="@+id/itemPriceEachTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemTitleTv"
        android:text="10"
        android:gravity="center"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/itemPriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="â‚¹399"
        android:textColor="@color/colorBlack" />
    <TextView
        android:id="@+id/itemQuantityTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="(2)"
        android:layout_toRightOf="@+id/itemPriceTv"
        android:textColor="#000"
        />
    <ImageButton
        android:id="@+id/itemRemoveTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_outline_indeterminate_check_box_24"
        android:textColor="@color/colorRed"
        android:layout_alignParentRight="true" />

</RelativeLayout>