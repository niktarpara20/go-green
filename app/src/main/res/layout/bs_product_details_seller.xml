<?xml version="1.0" encoding="utf-8"?>
<!--Bottom sheet layout -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_arrow_back_green"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_baseline_delete_green"
            android:background="@null"
            android:layout_alignParentRight="true" />

        <ImageButton
            android:id="@+id/editBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_baseline_edit_green"
            android:background="@null"
            android:layout_toLeftOf="@+id/deleteBtn"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:text="Product Details"
            android:textSize="18sp"
            android:background="@drawable/shape_rect04"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/productIconIv"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/toolbarRl"
        android:padding="5dp"
        android:src="@drawable/plant"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/productIconIv"
        android:padding="10dp">

        <TextView
            android:id="@+id/discountedNoteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect05"
            android:padding="5dp"
            android:layout_marginLeft="7dp"
            android:textSize="15sp"
            android:layout_below="@id/descriptionTv"
            android:text="10% OFF"
            android:textColor="#43A047"
            android:paddingRight="5dp" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="The Product Title"
            android:layout_below="@id/productIconIv"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/descriptionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:text="The Product Description "
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@id/titleTv"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/categoryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/discountedNoteTv"
            android:text="Category"
            android:textSize="15sp"
            android:layout_marginLeft="7dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/quantityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:layout_below="@id/categoryTv"
            android:text="Qty : 1"
            android:layout_marginLeft="7dp"
            android:textColor="#000"/>

        <RelativeLayout
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryTv"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/discountedPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹10"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/originalPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹20"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/discountedPriceTv"
                android:layout_marginRight="10dp" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>